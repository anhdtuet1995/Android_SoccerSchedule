<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_competition_margin"
        android:layout_marginStart="@dimen/item_competition_margin"
        android:layout_marginEnd="@dimen/item_competition_margin"
        android:layout_marginBottom="@dimen/item_competition_margin_bottom"
        android:background="@color/colorItemCompetitionBallBackground">

        <TextView
            android:id="@+id/tvGroupMatchName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/item_competition_name_size"
            android:layout_marginStart="@dimen/item_group_match_margin_left"
            android:layout_marginEnd="@dimen/item_group_match_margin_right"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/imvItemCompetitionBall"
            android:textColor="@android:color/white"
            android:padding="@dimen/item_competition_margin"
            android:textStyle="bold"
            />

    </RelativeLayout>

</RelativeLayout>