<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_competition_margin"
        android:background="@color/colorItemCompetitionBackground">

        <ImageView
            android:id="@+id/imvItemCompetitionBall"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="@dimen/item_competition_ball_padding"
            android:background="@color/colorItemCompetitionBallBackground"
            />

        <TextView
            android:id="@+id/imvItemCompetitionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/item_competition_name_size"
            android:layout_marginStart="@dimen/item_competition_name_margin_left"
            android:layout_marginEnd="@dimen/item_competition_name_margin_right"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/imvItemCompetitionBall"
            android:textColor="@android:color/white"
            />

    </RelativeLayout>

</RelativeLayout>