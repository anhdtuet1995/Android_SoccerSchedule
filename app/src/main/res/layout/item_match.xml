<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#403F51B5"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_fixture_margin">

        <RelativeLayout
            android:id="@+id/relativeItemHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageViewItemHomeLogo"
                android:layout_width="@dimen/item_logo_size"
                android:layout_height="@dimen/item_logo_size"
                android:src="@mipmap/ic_launcher"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/tvItemHomeName"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHE"
                android:textSize="@dimen/item_team_name_size"
                android:textColor="@android:color/white"
                android:layout_below="@+id/imageViewItemHomeLogo"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeItemAway"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true">

            <ImageView
                android:id="@+id/imageViewItemHomeAway"
                android:layout_width="@dimen/item_logo_size"
                android:layout_height="@dimen/item_logo_size"
                android:src="@mipmap/ic_launcher"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/tvItemHomeAway"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MAN"
                android:textSize="@dimen/item_team_name_size"
                android:textColor="@android:color/white"
                android:layout_below="@+id/imageViewItemHomeAway"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeItemTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/relativeItemHome"
            android:layout_toStartOf="@+id/relativeItemAway"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/tvItemDate"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11/02/2017"
                android:textSize="@dimen/item_date_size"
                android:textColor="@color/colorItemDate"/>

            <TextView
                android:id="@+id/tvItemTime"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00 SA"
                android:textSize="@dimen/item_time_size"
                android:textColor="@android:color/white"
                android:layout_below="@+id/tvItemDate"/>
        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>